@{
    ViewBag.AppName = "SecuredWebApp";
    ViewBag.Title = "SecuredWebApp Role Management";
}

<div class="ss-page-content">
    <div class="ss-page-title ss-h2">@ViewBag.Title</div>
    <div class="ss-article-title-divider"></div>

    <div id="ss-user-alert" class="alert-container" style="margin-top:10px;"></div>

    <div class="ss-grid-container">
        @Html.AntiForgeryToken()
        <div id="AppRoleGrid" class="ss-data-grid"></div>
    </div>
</div>

@section styles
{
    <link rel="Stylesheet" href="@Href("~/content/app/appform.css")" />
}

@section Scripts
{
    @Scripts.Render("~/Scripts/app/userManager.js")

    <script>
        $(function () { // will trigger when the document is ready
            $(document).ready(function () {
                AppWeb.RoleManagementEditor.init('AppRoleGrid');
            });
        });
    </script>
}
