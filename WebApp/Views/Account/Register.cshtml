@model SecuredWebApp.Models.View.RegisterViewModel
@{
    ViewBag.AppName = "SecuredWebApp";
    ViewBag.Title = "Registration";
}

<div class="ss-page-content">
    <div class="ss-page-title ss-h2">@ViewBag.AppName Site @ViewBag.Title</div>
    <div class="ss-article-title-divider"></div>
    <div class="ss-simple-box">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="ss-h4">Create a new account for @ViewBag.AppName Site :</div>
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="signin-section">
                <div class="form-group">
                    <div class="col-xs-12 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-user"><span>User Name</span></span></div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", title = "The friendly name you like to be called" })
                        </div>
                        <div class="input-note">(If you leave it empty, it will be the same as Email)</div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-envelope"><span>Email *</span></span></div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", title = "Use one of your existing email accounts" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-key"><span>Password *</span></span></div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", type = "password" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-user-secret"><span>Confirm *</span></span></div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", title = "Confirm the password you enter above" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
               </div>

                <div class="form-group">
                    <div class="col-xs-12 ss-section-spacing-top">
                        <input type="submit" value="Register" class="btn btn-default lead-width" />
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>
</div>

@section styles
{
    <link rel="Stylesheet" href="@Href("~/content/app/appform.css")" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
