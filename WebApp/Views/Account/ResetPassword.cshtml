@model SecuredWebApp.Models.View.ResetPasswordViewModel
@{
    ViewBag.AppName = "SecuredWebApp";
    ViewBag.Title = "Reset Password";
}

<div class="ss-page-content">
    <div class="ss-page-title ss-h2">@ViewBag.Title for @ViewBag.AppName Site</div>
    <div class="ss-article-title-divider"></div>
    <div class="ss-simple-box">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="ss-h4">Reset your password :</div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            
            @Html.HiddenFor(model => model.Code)

            <div class="signin-section">
                <div class="form-group">
                    <div class="col-xs-6 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-user"><span>Account</span></span></div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", title = "The email account you register with us" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-key"><span>Password</span></span></div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", type = "password" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6 control-group">
                        <div class="input-group">
                            <div class="input-group-addon lead-width align-left"><span class="fa fa-key"><span>Confirm</span></span></div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", title = "Confirm the password you enter above" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6 ss-section-spacing-top">
                        <input type="submit" value="Reset" class="btn btn-default lead-width" />
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>
</div>

@section styles
{
    <link rel="Stylesheet" href="@Href("~/content/app/appform.css")" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
