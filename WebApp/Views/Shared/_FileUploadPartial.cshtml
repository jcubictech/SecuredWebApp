@model SecuredWebApp.Models.View.UploadViewModel
@using SecuredWebApp.Helpers

<div class="upload-section">
    <div class="ss-h4">Select a csv file to upload (10Mb or less)</div>
    <div class="form-group">
        <div class="col-xs-6 no-right-padding">
            @Html.TextBoxFor(m => m.UploadFile, new { @class = "form-control input-sm ss-upload-file", @readonly = "readonly" })
        </div>
        <div class="col-xs-2 no-left-padding">
            <span id="attachFile" class="ss-action-icon ss-file-upload" data-field="@Html.NameFor(m => m.UploadFile)" data-upload="fileToUpload"><i class="fa fa-upload fa-2x"></i></span>
            <span id="removeFile" class="ss-action-icon ss-file-remove" data-field="@Html.NameFor(m => m.UploadFile)" data-remove="removeFile"><i class="fa fa-times fa-2x"></i></span>
            <div class="hide"><input id="fileToUpload" name="fileToUpload" type="file" accept="@SettingsHelper.GetSafeSetting("FileType", ".csv")" /></div>
        </div>
        <div class="clearfix"></div>
    </div>
    <button type="submit" class="btn btn-default">Upload</button>
</div>

<script type="text/javascript">
        $(document).ready(function () {
            AppWeb.File.initUpload({ browseId: 'attachFile', removeId: 'removeFile' });
        });
</script>



