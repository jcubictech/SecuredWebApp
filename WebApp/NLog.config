<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off"
      internalLogToConsole="true"
      internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variabeles -->
  <!--<variable name="myvar" value="myvalue"/>-->

  <targets>
    <!-- console target -->
    <target xsi:type="Console" name="console" layout="${shortdate} ${level} ${message}" />

    <!-- file target -->
    <target name="file" xsi:type="AsyncWrapper">
      <target xsi:type="File" name="logfile" fileName="${basedir}/Logs/AppLog ${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}"/>
    </target>

    <!-- db target -->
    <target xsi:type="Database" name="db" keepConnection="true"
            connectionString="Data Source=Jimmy-Laptop;Initial Catalog=AppDB;User ID=sa;Password=j23109123"
            dbProvider="System.Data.SqlClient"
            commandText="INSERT INTO AppLog(EventDateTime, EventLevel, UserName, MachineName, EventMessage, ErrorSource, ErrorClass, ErrorMethod, ErrorMessage, InnerErrorMessage) VALUES (@EventDateTime, @EventLevel, @UserName, @MachineName, @EventMessage, @ErrorSource, @ErrorClass, @ErrorMethod, @ErrorMessage, @InnerErrorMessage)">
      <parameter name="@EventDateTime" layout="${date:s}" />
      <parameter name="@EventLevel" layout="${level}" />
      <parameter name="@MachineName" layout="${machinename}" />
      <parameter name="@EventMessage" layout="${message}" />
      <parameter name="@UserName" layout="${app-user}" />
      <parameter name="@ErrorSource" layout="${event-context:item=error-source}" />
      <parameter name="@ErrorClass" layout="${event-context:item=error-class}" />
      <parameter name="@ErrorMethod" layout="${event-context:item=error-method}" />
      <parameter name="@ErrorMessage" layout="${event-context:item=error-message}" />
      <parameter name="@InnerErrorMessage" layout="${event-context:item=inner-error-message}" />
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Error" writeTo="console" />
    <logger name="*" minlevel="Error" writeTo="file" />
    <logger name="*" minlevel="Error" writeTo="db" />
  </rules>
</nlog>